{
  "id": "com.ikea.tradfri.gateway",
  "sdk": 2,
  "name": {
    "en": "IKEA Trådfri Gateway"
  },
  "description": {
    "en": "IKEA Trådfri Gateway"
  },
  "category": "lights",
  "version": "0.0.9", 
  "compatibility": ">=1.5.3",
  "author": {
    "name": "Rogier Hofboer",
    "email": "rogier@hofboer.nl"
  },
  "contributors": {
    "developers": [
      {
        "name": "Espen Ljosland",
        "email": "espen@ljosland.com"
      },
      {
        "name": "Sven ten Raa",
        "email": "sventenraa@gmail.com"
      }
    ]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "drivers": [
    {
      "id": "light",
      "name": {
        "en": "Light"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_temperature",
        "light_hue",
        "light_saturation"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/light/assets/images/large.png",
        "small": "/drivers/light/assets/images/small.png"
      }
    },
    {
      "id": "group",
      "name": {
        "en": "Group"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/light/assets/images/large.png",
        "small": "/drivers/light/assets/images/small.png"
      },
      "settings": [
        {
          "id": "force_individual_dim",
          "type": "checkbox",
          "label": {
            "en": "Force set dim value individually for each light"
          },
          "hint": {
            "en": "Enable this if you experience issues where not all lights in group are dimmed to requested value."
          },
          "value": false
        }
      ]
    },
    {
      "id": "plug",
      "name": {
        "en": "Plug"
      },
      "class": "socket",
      "capabilities": [
        "onoff",
        "meter_power"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/plug/assets/images/large.png",
        "small": "/drivers/plug/assets/images/small.png"
      }
    }
  ],
  "flow": {
    "actions": [
      {
        "id": "setScene",
        "title": {
          "en": "Set a mood"
        },
        "args": [
          {
            "name": "group",
            "type": "device",
            "filter": "driver_id=group"
          },
          {
            "name": "scene",
            "type": "autocomplete"
          }
        ]
      }
    ]
  }
}
